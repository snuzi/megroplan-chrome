{
    "manifest_version": 2,
    "name": "Recipe scraper for Megroplan",
    "description": "This extension allows you to scrape any recipe on the web and save it to Megroplan!",
    "version": "1.3",
    "browser_action": {
        "default_icon": "src/ui/img/logo.png",
        "default_popup": "src/ui/popup.html",
        "default_title": "Extract & Save recipe to Megroplan!"
    },
    "permissions": [
        "activeTab",
        "http://*/*", 
        "https://*/*"
    ],
    "background" : {
        "persistent": false,
        "scripts" : ["background.js"]
    }
}