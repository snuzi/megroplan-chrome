{
    "manifest_version": 2,
    "name": "Recipe scraper for Megroplan",
    "description": "This extension allows you to easily extract & save recipes of a website to Megroplan!",
    "version": "1.0",
    "browser_action": {
        "default_icon": "ui/img/logo.png",
        "default_popup": "ui/popup.html",
        "default_title": "Extract & Save recipe to Megroplan!"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "http://*/*", 
        "https://*/*"
    ],
    "background" : {
        "persistent": false,
        "scripts" : ["background.js"]
    }
}